src_base_path: ./
dest_base_path: ./
css:
  - src: source/scss/**/*.scss
    dest: build/css
img:
  - src: source/images/*.{png, jpg, jpeg, gif, svg}
    dest: build/images
js:
  - src: source/scripts/*.js
    dest: build/js
browsersync:
  server: null # Static Sites
  proxy: http://localhost/base_theme_wordpress/
  reload: ../../**/*.php
